rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // User logos - each user can only upload to their own folder
    match /user_logos/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                     request.auth.uid == userId &&
                     request.resource.size < 5 * 1024 * 1024 && // Max 5MB
                     request.resource.contentType.matches('image/.*');
    }

    // Profile images
    match /profile_images/{imageName} {
      allow read: if true;
      allow write: if request.auth != null && 
                     (imageName == request.auth.uid + ".jpg" || imageName == request.auth.uid) &&
                     request.resource.size < 5 * 1024 * 1024; // Aumentei para 5MB e removi contentType temporariamente para teste
    }
  }
}
